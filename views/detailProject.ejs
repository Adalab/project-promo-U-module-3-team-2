<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>
    <h1><%=project.nameProject%></h1>
    <section class="preview">
        <div
          class="preview_image"
          style="background-image: url('<%=project.imageProject%>')"
        ></div>
  
        <section class="preview_autor">
            <section class="infoProject">
              <div class="infoProject_container">
                <hr class="infoProject_container-line1" />
                <p class="infoProject_container-subtitle">
                  Personal Project Card
                </p>
                <hr class="infoProject_container-line2" />
              </div>
      
              <h2 class="infoProject_title">
                <%=project.nameProject%>
              </h2>
              <p class="infoProject_slogan">
                <%=project.sloganProject%>
              </p>
              <p class="infoProject_desc">
                <%=project.descProject%>
              </p>
              <section class="technologies">
                <p class="technologies_text">
                    <%=project.techProject%>
                </p>
                <a href="<%=project.urlDemo%>" target="_blank" rel="noreferrer">
                  <button class="technologies_icon">
                    <i class="fa-solid fa-globe technologies_icon-img"></i>
                  </button>
                </a>
                <a href="<%=project.urlGit%>" target="_blank" rel="noreferrer">
                  <button class="technologies_icon">
                    <i class="fa-brands fa-github technologies_icon-img"></i>
                  </button>
                </a>
              </section>
            </section>
      
            <section class="infoAutor">
              <div
                class="infoAutor_image"
                style="background-image: url('<%=project.imageAutor%>')"
              ></div>
              <p class="infoAutor_job"><%=project.jobAutor%></p>
              <p class="infoAutor_name"><%=project.nameAutor%></p>
            </section>
          </section>
      </section>
  </body>
</html>
